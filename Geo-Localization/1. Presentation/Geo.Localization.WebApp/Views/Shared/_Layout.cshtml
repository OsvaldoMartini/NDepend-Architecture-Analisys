@using System
@using Geo.Localization.Services.Texts
@using Geo.Localization.WebApp.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@RGlobal.AppName - @ViewBag.Title</title>

    @Scripts.Render("~/bundles/base")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/lang")

    @Scripts.Render("~/bundles/bootstrap")
    <script src=@Url.Content("~/js/BrowserDetect.js")></script>



    <script type="text/javascript" language="javascript">
        var lang = '@GlobalHelper.CurrentCulture';
        var urlContent = '@Url.Content("~/")';
        var mvcExtensionless = '@ViewData["MvcExtensionless"]' == null ? false : '@ViewData["MvcExtensionless"]';
        var appPathAppName = '@System.Configuration.ConfigurationManager.AppSettings["appPathAppName"]';
        var companyId = '@System.Configuration.ConfigurationManager.AppSettings["CompanyID"]';
        var sendEmail = '@System.Configuration.ConfigurationManager.AppSettings["SendEmail"]';
        if (checkLocalHost()) {
            appPathAppName = '';
        }


        $(document).ready(function () {
            $(":input[data-val-length-max]").each(function (index, element) {
                var length = parseInt($(this).attr("data-val-length-max"));
                $(this).prop("maxlength", length);
            });

        });

        $(document).ready(function () {
            $(":input[data-val-length-max]").each(function (index, element) {
                var length = parseInt($(this).attr("data-val-length-max"));
                $(this).prop("maxlength", length);
            });

        });

    </script>


    <!-- Bootstrap -->
    <link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/modern-business.css")" rel="stylesheet">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Scripts", false)
    @RenderSection("css", false)


</head>
<body>

    @{ Html.RenderPartial("_MenuDin"); }
    @Html.Partial("_ModalConfirmation")

    @RenderBody()

    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>&copy; @DateTime.Now.Year - @RGlobal.AppName</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->


    <script>
        $(document).ready(function () {
            lang = MultiLanguageMVC.Cookies.getCookie("LangForMultiLanguage");
            $(".setLang[data-lang='" + lang + "'] img").addClass("active-lang");

            $(".setLang").on("click",
                function (event) {
                    var lang = $(this).attr("data-lang");
                    MultiLanguageMVC.Cookies.setCookie("LangForMultiLanguage", lang, 30);
                    location.reload(true);
                });


            $('[data-toggle="popover"]').popover().click(function () {
                setTimeout(function () {
                    $('[data-toggle="popover"]').popover('hide');
                }, 2000);
            });


        });



    </script>
    @*@Scripts.Render("~/bundles/angular")*@

</body>
</html>
<script>
    Login_LoadInfos();
</script>